{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["ES2021", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false, // TypeScript 4.4+ only!
    "sourceMap": true,
    "declaration": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": ["node_modules", "<node_internals>/**"]
}
